{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/kafka-idempotency/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/kafka-idempotency/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/kafka-idempotency",
  "projects": {
    "kafka-idempotency": {
      "type": "application",
      "root": "apps/kafka-idempotency",
      "entryFile": "main",
      "sourceRoot": "apps/kafka-idempotency/src",
      "compilerOptions": {
        "tsConfigPath": "apps/kafka-idempotency/tsconfig.app.json"
      }
    },
    "db-service": {
      "type": "application",
      "root": "apps/db-service",
      "entryFile": "main",
      "sourceRoot": "apps/db-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/db-service/tsconfig.app.json"
      }
    },
    "api-service": {
      "type": "application",
      "root": "apps/api-service",
      "entryFile": "main",
      "sourceRoot": "apps/api-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}